{% extends 'base.html.twig' %}

{% block title %}Recette -
	{{ recette.name }}
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="mt-4">{{ recette.name | capitalize }}</h1>

		<div class="mt-2">
			<img class="img-fluid" id="imageFile" src="{{ vich_uploader_asset(recette, 'imageFile')  | imagine_filter('recette') }}" alt="{{ recette.name }}"/>
		</div>

		<p class="mt-3 text-black">La note de cette recette est de :
			<span class=" badge bg-danger">{{ recette.average | number_format('2', '.', '') }}&nbsp;/ 5</span>
		</p>
		<span class=" badge bg-dark">Créée le :{{ recette.createAt | date('d-m-Y') }}</span>
		{% if recette.time is defined %}
			<p>Temps (en minutes) :
				{{ recette.time }}
			</p>
		{% endif %}
		{% if recette.nbPeople is defined %}
			<p class="mt-3">Nombre de personnes :
				{{ recette.nbPeople }}
			</p>
		{% endif %}
		{% if recette.difficulty is defined %}
			<p class="mt-3">Difficulté :
				{{ recette.difficulty }}
				&nbsp;/ 5
			</p>
		{% endif %}
		{% if recette.price is defined %}
			<p class="mt-3">Prix en € :
				{{ recette.price }}
			</p>
		{% endif %}
		{% if recette.description is defined %}
			<div class="mt-3">{{ recette.description | raw }}</div>
		{% endif %}
		{% if recette.ingredients is defined %}
			<div class="mt-3">
				{% for ingredient in recette.ingredients %}
					<span class=" badge bg-success text-black">{{ ingredient.name }}</span>
				{% endfor %}
			</div>
		{% endif %}
		<div class="mark mt-4 ">{{ form(form) }}</div>
	</div>

{% endblock %}
