{% extends 'base.html.twig' %}

{% block title %}Recette
{% endblock %}

{% block body %}
	<style>
		.count {
			margin-top: 60px;
		}
	</style>
	<div class="container mt-3">
		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-primary" role="alert">
				<strong>{{ message }}</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		<h1 class="d-flex justify-content-center text-primary">Mes recettes -  {{ user.pseudo }}</h1>
		<a href="{{ path('recette_new')}}" class="btn btn-warning text-black mt-3 float-end">Créer une recette</a>
		{% if recettes is not empty %}
		<div class="count">
			<span class=" badge bg-light text-black">Nombre de recettes : {{ recettes.getTotalItemCount }}</span>
		</div>
		<table class="table table-hover mt-2">
			<thead>
				<tr class="table-active">
					<th scope="col" class="text-primary">Numéro</th>
					<th scope="col" class="text-primary">Nom</th>
					<th scope="col" class="text-primary">Prix</th>
					<th scope="col" class="text-primary">Difficulté</th>
					<th scope="col" class="text-primary">Date de création</th>
					<th scope="col" class="text-primary">Modification</th>
					<th scope="col" class="text-primary">Suppression</th>
				</tr>
			</thead>
			<tbody>
				{% for recette in recettes %}
					{% if loop.index is divisible by(2) %}
						<tr class="table-secondary">
						{% else %}
							<tr class="table-light"></tr>
						{% endif %}
						<th scope="row">{{ recette.id }}</th>
						<td>
							<a href="{{ path('recette_show',{'id':recette.id})}}">{{ recette.name | capitalize }}</a>
						</td>
						<td>{{ (recette.price  is same as(null)) ? 'non renseigné' : recette.price |format_currency('EUR') }}</td>
						<td>{{ recette.difficulty is same as(null) ? 'non renseignée' : recette.difficulty }}</td>
						<td>{{ recette.createAt |date("d-m-Y H:i:s") }}</td>
						<td>
							<a href="{{ path('recette_edit', { id: recette.id }) }}" class="btn btn-sm btn-outline-warning text-black text-small" data-placement="top" data-toggle="tooltip" title="Modifier la recette : {{ recette.name }} " data-trigger="hover">Modification</a>
						</td>
						<td>
							<a href="{{ path('recette_delete', { id: recette.id }) }}" class="btn btn-sm btn-outline-warning text-black text-small" data-placement="top" data-toggle="tooltip" title="Suppression l'ingrédient : {{ recette.name }} " data-trigger="hover">Suppression</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{# display navigation #}
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(recettes) }}
		</div>
		{% endif %}
	</div>

{% endblock %}
