{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
<div class="container">
<h1 class="mt-4">Formulaire modification mot de passe</h1>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-dismissible alert-primary" role="alert">
				<strong>{{ message }}</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		<div class="form-group">
			{{ form_label(form.plainPassword) }}
			{{ form_widget(form.plainPassword) }}
			<div class="form-error">
				{{ form_errors(form.plainPassword) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_widget(form.newPassword) }}
			<div class="form-error">
				{{ form_errors(form.newPassword) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
		{{ form_end(form) }}
	</div>
</div>


{% endblock body %}