{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<div class="container float-sm-none">
		<h1 class=" mt-4">Formulaire de connexion</h1>
		{% for message in app.flashes('success') %}
			<div class="alert alert-dismissible alert-primary" role="alert">
				<strong>{{ message }}</strong>
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
		{% if error %}
			<div class="alert alert-dismissible alert-danger">
				{{ error.messageKey | trans(error.messageData, 'security' )}}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>


		{% endif %}
		<form action="{{ path('app_security')}}" method="post" name="login">
			<fieldset>
				<legend>Coordonn√©es</legend>
				<div class="form-group">
					<label for="username" class="form-label mt-4">Adresse email</label>
					<input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" value="{{ last_username }}">
				</div>
				<div class="form-group">
					<label for="password" class="form-label mt-4">Mot de passe</label>
					<input type="password" class="form-control" id="password" name="_password" autocomplete="off">
				</div>
				<div class="mt-4">
					<button type="submit" class="btn btn-warning float-end text-black">Se connecter</button>
				</div>
			</fieldset>
		</form>
	</div>

{% endblock %}
